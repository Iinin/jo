/*
	jocontainer.styl
*/

jocontainer
	@extend joview

/*
.nativescroll jocontainer
	height: inherit
*/

jocaption
	@extend jocontainer
	margin: 1em

jocard
	@extend jocontainer
	background: #ffffff
	width: 100%
	min-height: 100%
	padding: 0
	margin: 0
	display: flex
	flex-direction: column
	align-items: stretch

	> jolist, > jomenu
		margin: 0

	> *:last-child
		margin-bottom: 1em

jodialog
	@extend jocontainer

joflexcol
	height: 100%
	width: 100%
	margin: 0
	display: block
	display: flex
	flex-direction: column
	align-items: stretch

	> *
		flex: 1

joflexrow
	width: 100%
	margin: 0
	display: block
	display: flex
	align-items: stretch

	> *
		margin-right: 0
		position: relative
		flex: 1

	> *:last-child
		margin-right: 1em

	> jotoggle
		flex: 0

jofooter
	@extend jocontainer

	display: block
	width: 100%
	margin: 0
	display: flex
	flex: 1
	flex-direction: column
	align-items: stretch
	justify-content: end

	> *
		align-items: flex-end

joform
	@extend jocontainer

jogroup
	@extend jocontainer

	margin: 1em
	padding: 1em 0
	border-radius: 3px
	background: #eeeeee

	> *.last-child
		margin-bottom: 0

jonavbar
	@extend jocontainer

	font-size: 120%
	font-weight: bold
	display: block
	position: relative
	padding: 0
	color: #333
	max-height: 3em
	line-height: 3em
	border-top: none
	border-right: none
	border-left: none
	text-align: center
	flex: 1
	background-color: #888
	cursor: default

	> joview
		margin: 0
		display: block
		text-align: center

	> joflexrow
		position: absolute
		top: 0
		left: 0
		right: 0
		bottom: 0

		> *
			flex: 1

		> jobackbutton
			  flex: 1
			  max-width: 1em

jopopup
	@extend jocontainer

	display: block
	position: absolute
	border: 2px solid #434343
	box-shadow: 0 0 20px rgba(0, 0, 0, 0.6)
	border-radius: 1em
	background-color: #747474
	color: #000
	transition: opacity 0.4s ease-in
	width: 90%
	max-width: 500px
	margin: 0 auto
	opacity: 0
	top: 50%
	left: 50%
	transform: translateY(-50%) translateX(-50%)

	> jolist > *.select:first-childjopopup > jomenu > *.select:first-child
		border-top: none
		border-radius: 1em 1em 0 0

	> jolist > *:last-child.selectjopopup > jomenu > *:first-child.select
		border-bottom: none
		border-radius: 0 0 1em 1em

	> joscroller
		width: 100%

	> jotitle
		color: #fff
		border-top: none
		border-color: #999
		margin-bottom: 1em
		background-color: #3f3f3f

	> *
		border-radius: 0

	> *:first-child
		border-top-right-radius: 1em
		border-top-left-radius: 1em

	> *:last-child
		border-bottom-right-radius: 1em
		border-bottom-left-radius: 1em

jopopup.show
	opacity: 1

