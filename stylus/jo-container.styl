joscroller
	@extend jocontainer

	position: absolute
	display: block
	top: 0
	left: 0
	bottom: 0
	right: 0
	overflow: auto
	padding: 0
	margin: 0
	overflow-scrolling: touch

joshim
	@extend jocontainer

	overflow: hidden
	position: absolute
	z-index: 100
	top: 0
	left: 0
	right: 0
	bottom: 0
	display: none
	background: rgba(0, 0, 0, 0.8)
	opacity: 0
	transition: opacity .4s ease

joshim.show
		display: block
		opacity: 1

jostack
	@extend jocontainer

	height: 100%;
	transition: opacity 0.2s ease-out;
	opacity: 1

	> *
		z-index: 0
		opacity: 1
		position: absolute
		animation-fill-mode: forwards
		transform: translate3d(0, 0, 0)
		transition: transform 0.25s ease-in, opacity 0.25s ease-out, height 0s ease, overflow 0s ease

	> .next
		z-index: 1
		transform: translateX(100%)
		height: 100%
		// overflow: hidden
		opacity: 1

	> .prev
		z-index: 0
		transform: translateX(0)
		height: 100%
		// overflow: hidden

	> *.next.pull
		transition: transform 0.4s ease-out, opacity 0.4s ease-in, height 0s ease, overflow 0s ease
		transform: translateY(100%)
		opacity: 0

jostack.hide
	opacity: 0

.nativescroll jostack
	width: 100%
	position: relative

jostackscroller
	@extend jocontainer

jotitle
	@extend jocontainer

	background-color: #000
	color: #3c3c3c
	font-weight: normal
	text-align: center
	padding: 1em
	margin: 0
	cursor: pointer

	+ joflexcol
	+ joflexrow
		margin-top: 1em

jotoolbar
	@extend jocontainer

	color: rgba(255, 255, 255, 0.9)
	background-color: rgba(0, 0, 0, 0.8)
	font-weight: normal
	text-align: center
	position: absolute
	padding: 1em
	bottom: 0
	left: 0
	right: 0
	border-top: 1px solid rgba(0, 0, 0, 0.8)
	cursor: pointer
	outline: none
	outline-color: transparent
	z-index: 1

jopopup > jocard
	margin-bottom: 0

jopopup > *.scrollv
	width: 100%;

*.scrollv
	overflow: auto;
	-webkit-overflow-scrolling: touch;
	-ms-overflow-style: scrollbar;
	-ms-touch-action: pan-y;

